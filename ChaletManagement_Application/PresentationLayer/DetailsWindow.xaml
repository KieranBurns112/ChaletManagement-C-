        <Label x:Name="ExtrasLabel" Content="Additional Extras: " HorizontalAlignment="Left" Margin="20,233,0,0" VerticalAlignment="Top" FontSize="20" Width="726"/>
        <Label x:Name="GuestBoxHeader" Content="" HorizontalAlignment="Left" Margin="20,56,0,0" VerticalAlignment="Top" FontSize="15" Width="348"/>
        <Label x:Name="HireBoxHeader" Content="" HorizontalAlignment="Left" Margin="398,56,0,0" VerticalAlignment="Top" FontSize="15" Width="348"/>

